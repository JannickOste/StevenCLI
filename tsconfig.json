{
  "compilerOptions": {
    "target": "es2016",                               
    "experimentalDecorators": true,                    
    "module": "commonjs",                                
    "rootDir": "src",                                  
    "outDir": "dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true                             
  },
  
  "exclude": [
    "tests"
  ]
}
